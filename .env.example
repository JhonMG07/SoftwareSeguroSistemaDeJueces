# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api

# Supabase Configuration (Main Project)
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key

# Super Admin Setup (for seeding script)
# Secret Key - NEVER expose this publicly, only use server-side
# This is found under "Secret keys" section in Supabase Dashboard
SUPABASE_SERVICE_ROLE_KEY=your-secret-key

# Super Admin Credentials (change these!)
SUPER_ADMIN_EMAIL=admin@cortesupremacr.go.cr
SUPER_ADMIN_PASSWORD=ChangeMe123!

# ============================================
# Identity Vault (Separate Supabase Project)
# ============================================
# Create a second Supabase project for Identity Vault
# This provides maximum security by physically separating identity mappings

IDENTITY_VAULT_URL=your-vault-project-url
IDENTITY_VAULT_SERVICE_KEY=your-vault-secret-key
RESEND_API_KEY=your-resend-api-key
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY= your-encryption-key